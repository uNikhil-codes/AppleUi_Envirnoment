{
  /* ============================
     üçé ULTIMATE MAC OS EXPERIENCE
     Performance & Core Behavior
     =============================== */
  "files.autoSave": "afterDelay",
  "files.autoSaveDelay": 800,
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "files.eol": "\n",
  "window.experimental.useGPUAcceleration": true,
  "window.nativeTabs": false,
  "window.nativeFullScreen": true,
  "workbench.list.smoothScrolling": true,
  "editor.smoothScrolling": true,
  "terminal.integrated.smoothScrolling": true,
  "editor.fastScrollSensitivity": 8,
  "editor.scrollBeyondLastLine": false,
  "editor.mouseWheelScrollSensitivity": 0.8,

  /* ===============================
     üé® SF MONO-INSPIRED TYPOGRAPHY
     Pixel-Perfect Apple Font Feel
     =============================== */
  "editor.fontFamily": "'SF Mono', 'JetBrains Mono', 'Menlo', 'Consolas', monospace",
  "editor.fontSize": 12.5,
  "editor.lineHeight": 1.75,
  "editor.fontWeight": "400",
  "editor.fontLigatures": "'calt', 'liga', 'ss01', 'ss02', 'ss03', 'ss19'",
  "editor.letterSpacing": 0.3,
  "editor.fontAntialiasing": "subpixel-antialiased",
  "editor.fontHinting": "slight",
  "editor.renderLineHighlight": "all",
  "editor.renderLineHighlightOnlyWhenFocus": false,

  /* ===============================
     ‚ú® CURSOR & ANIMATIONS
